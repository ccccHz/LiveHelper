{
    "manifest_version": 2,
    
    "default_locale": "zh_CN",
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "version": "1.0.3",
    "options_page": "options.html",

    "icons": {
        "256":"icon/icon.png"
    },
    
    "browser_action": {
        "default_icon": "icon/icon-64.png",
        "default_popup": "popup.html"
    },
	
	"background": {
		"page": "background.html"
	},

    "permissions": [
        "cookies",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "background",
        "http://*.douyu.com/*",
        "https://*.douyu.com/*",
        "http://*.panda.tv/*",
        "http://*.zhanqi.tv/*",
        "http://*.huya.com/*",
        "http://*.bilibili.com/*",
        "http://*.nicovideo.jp/*",
        "http://*.twitch.tv/",
        "https://*.twitch.tv/*",
        "http://*.huomaotv.cn/*",
        "http://*.huomao.com/*",
        "http://userapi.plu.cn/*",
        "http://*.quanmin.tv/*",
        "https://*.nicovideo.jp/*",
        
        "https://imspace.applinzi.com/*",
        
        "http://*.douyucdn.cn/*",
        "https://*.douyucdn.cn/*",
        "http://*.pdim.gs/*",
        "http://*.hdslb.com/*",
        "http://*.plures.net/*",
        "http://*.dwstatic.com/*",
        "http://*.jtvnw.net/*",
        "https://*.jtvnw.net/*",
        "http://*.nimg.jp/*"
    ],
    
    "web_accessible_resources": [
        "icon.png",
		"*://*"
    ],
    
    "content_scripts": [
        {
            "matches": [
                "http://*.douyu.com/*",
                "https://*.douyu.com/*"
            ],
            "js": ["js/pcs.js"]
        }
    ]
}