{
    "manifest_version": 2,
    
    "default_locale": "zh_CN",
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "version": "0.1.8",
    "options_page": "options.html",
    
    "icons": {
        "256":"icon.png"
    },
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
	
	"background": {
		"page": "background.html"
	},

    "permissions": [
        "cookies",
        "notifications",
		"webRequest",
		"webRequestBlocking",
		"background",
        "http://*.douyu.com/*",
        "http://*.panda.tv/*",
        "http://*.zhanqi.tv/*",
        "http://*.huya.com/*",
        "http://*.bilibili.com/*",
        "http://*.nicovideo.jp/*",
        "http://*.twitch.tv/",
        "https://*.twitch.tv/*",
        "http://*.huomaotv.cn/*",
        "http://userapi.plu.cn/*",
        "http://*.quanmin.tv/*",
        "https://*.nicovideo.jp/*",
        
        "https://imspace.applinzi.com/*",
        
        "http://*.douyucdn.cn/*",
        "http://*.pdim.gs/*",
        "http://*.hdslb.com/*",
        "http://*.plures.net/*",
        "http://*.dwstatic.com/*",
        "http://*.jtvnw.net/*",
        "https://*.jtvnw.net/*",
        "http://*.nimg.jp/*"
    ],
    
    "web_accessible_resources": [
        "icon.png",
		"*://*"
    ],
    
    "content_scripts": [
        {
            "matches": ["http://www.douyu.com/*"],
            "js": ["js/pcs.js"]
        }
    ]
}